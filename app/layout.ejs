  <body>
    <nav class="navbar navbar-expand-lg navbar-light fixed-top bg-deep-gray pt-4 pb-4">
      <div class="container-xxl">
        <h1 class="mb-0"><a class="navbar-brand align-middle p-0" href="index.html">coding home</a></h1>
        <button class="navbar-toggler border-0" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
          <span class="material-symbols-outlined text-success">drag_handle</span>
        </button>
        <div class="collapse navbar-collapse" id="navbarSupportedContent">
          <ul class="navbar-nav fz-18 text-center mb-2 mt-4 mb-lg-0 mt-lg-0 ms-lg-auto">
            <li class="nav-item">
              <a class="nav-link text-white p-tb-24 p-lg-0 me-lg-6 active" aria-current="page" href="index.html">首頁</a>
            </li>
            <li class="nav-item">
              <a class="nav-link text-white p-tb-24 p-lg-0 me-lg-6" href="class-list.html">課程介紹</a>
            </li>
            <li class="nav-item">
              <a class="nav-link text-white p-tb-24 pb-0 p-lg-0" href="#" data-bs-toggle="modal" data-bs-target="#MemberLogin"><span class="material-symbols-outlined align-middle fz-4 pr-6">account_circle</span>登入</a>
            </li>
          </ul>
        </div>
      </div>
      <div class="decoration-line d-flex position-absolute w-100">
        <div class="left-line bg-success w-50"></div>
        <div class="right-line bg-blue w-50"></div>
      </div>
    </nav>
    <div class="modal fade" id="MemberLogin" tabindex="-1" aria-labelledby="MemberLoginLabel" aria-hidden="true">
      <div class="memberlogin modal-dialog modal-dialog-centered">
          <div class="modal-content bg-deep-gray rounded-0 border border-1 border-white">
          <div class="modal-header border-0 position-relative d-block">
            <h5 class="modal-title text-white text-center fs-4" id="exampleModalLabel">登入</h5>
            <button type="button" class="material-symbols-outlined ms-0 border-0 text-white bg-transparent position-absolute" data-bs-dismiss="modal" aria-label="Close">close</button>
          </div>
          <div class="modal-body row">
          <form action="#" class="text-light-gray">
              <ul class="mx-auto list-unstyled col-lg-6 col-12">
                  <li class="mb-3 mb-lg-4">            
                      <label for="email">信箱</label><br>
                      <input type="email" name="email" id="email" class="w-100 border border-1 border-white bg-deep-dark text-light-gray" placeholder="請輸入信箱"></li>
                  <li class="mb-3 mb-lg-4">            
                      <label for="password">密碼</label><br>
                      <input type="password" name="password" id="password" class="w-100 border border-1 border-white bg-deep-dark text-light-gray" placeholder="請輸入密碼"></li>
                  <li>
                      <button type="submit" class="btn-login mb-4 mb-lg-6">登入</button>
                  </li>
                  <div class="decoration-block d-flex justify-content-between">
                      <div class="left-line align-self-center col"></div>
                      <div class="text-block text-light-gray ms-3 me-3 align-self-baseline">其他登入方式</div>
                      <div class="right-line align-self-center col"></div>
                  </div>
                  <li class="orderlogin position-relative text-center">
                      <button class="w-100 btn btn-outline-light position-relative mb-3 mb-lg-4"><img src="./assets/images/icon_fb.svg" alt="facebook" class="social-icon">Facebook 登入</button>
                      <button class="w-100 btn btn-outline-light position-relative"><img src="./assets/images/icon_google.svg" alt="google" class="social-icon">Google 登入</button>
                  </li>
              </ul>
          </form>
          </div>
          </div>
      </div>
  </div>
    <%- contents %>

    <footer class="footer container-fluid text-center bg-deep-dark">
